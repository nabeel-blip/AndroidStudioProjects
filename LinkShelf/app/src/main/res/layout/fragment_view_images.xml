<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spalsh_screen_blur"
    >

    <ImageView
        android:id="@+id/view_images_iv"
        android:layout_width="407dp"
        android:layout_height="512dp"
        android:layout_weight="9"
        app:layout_constraintBottom_toTopOf="@+id/view_images_bt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/view_images_bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Previous"
        app:layout_constraintBottom_toTopOf="@+id/view_images_bt3"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/view_images_bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_images_bt1" />

    <Button
        android:id="@+id/view_images_bt3"
        android:layout_width="303dp"
        android:layout_height="57dp"
        android:layout_marginBottom="112dp"
        android:text="Go To Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/view_images_bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        app:layout_constraintBottom_toBottomOf="@+id/view_images_bt1"
        app:layout_constraintEnd_toStartOf="@+id/view_images_bt2"
        app:layout_constraintStart_toEndOf="@+id/view_images_bt1" />


</androidx.constraintlayout.widget.ConstraintLayout>