<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spalsh_screen_blur"
    >

    <Button
        android:id="@+id/add_link_bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Link"
        app:layout_constraintBottom_toTopOf="@+id/add_link_bt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_link_pt1" />

    <Button
        android:id="@+id/add_link_bt2"
        android:layout_width="295dp"
        android:layout_height="56dp"
        android:layout_marginBottom="140dp"
        android:text="Go To Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/add_link_pt1"
        android:layout_width="287dp"
        android:layout_height="68dp"
        android:layout_marginTop="216dp"
        android:background="#F60404"
        android:backgroundTint="#B37FC8B1"
        android:ems="10"
        android:fadingEdge="horizontal|vertical"
        android:hint="Paste link here"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>